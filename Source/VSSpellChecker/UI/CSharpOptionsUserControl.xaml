<UserControl x:Class="VisualStudio.SpellChecker.UI.CSharpOptionsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="375" d:DesignWidth="500">
	<StackPanel Margin="10">
		<CheckBox Content="Ignore _XML documentation comments (/// ... and /** ... */)"
			Name="chkIgnoreXmlDocComments" Margin="3" />
		<CheckBox Content="Ignore _delimited comments (/* ... */)" Name="chkIgnoreDelimitedComments" Margin="3" />
		<CheckBox Content="Ignore _standard single line comments (// ...)" Name="chkIgnoreStandardSingleLineComments"
			Margin="3" />
		<CheckBox Content="Ignore _quadruple slash single line comments (//// ...)" Name="chkIgnoreQuadrupleSlashComments"
			Margin="3" />
		<CheckBox Content="Ignore _normal string literals (&quot;...&quot;)" Name="chkIgnoreNormalStrings"
			Margin="3" />
		<CheckBox Content="Ignore _verbatim string literals (@&quot;...&quot;)" Name="chkIgnoreVerbatimStrings"
			Margin="3" />
	</StackPanel>
</UserControl>
